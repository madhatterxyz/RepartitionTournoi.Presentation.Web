@page
@model RepartitionTournoi.Presentation.Web.Pages.Tournois.DetailsModel

@{
    ViewData["Title"] = "Details";
    string currentNomJeu = string.Empty;
}

<h1>Details</h1>

<div>
    <h4>Tournoi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TournoiDTO.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TournoiDTO.Nom)
        </dd>
    </dl>
    @foreach (var item in Model.TournoiDTO.Compositions)
    {
        @if (currentNomJeu!=item.Jeu.Nom)
        {
            <div class="row">
                <div class="col-md-2">
                    <h1>@Html.DisplayFor(modelItem => item.Jeu.Nom)</h1>
                </div>
            </div>
            currentNomJeu = item.Jeu.Nom;
        }
        <div class="row">
            <div class="offset-2 col-md-2">
                <h2>@Html.DisplayFor(modelItem => item.Match.Nom)</h2>
            </div>
        </div>
        @foreach (var match in item.Match.Scores)
        {
            <div class="row">
                <div class="offset-4 col-md-2">
                    @Html.DisplayFor(modelItem => match.Joueur.Nom)
                    @Html.DisplayFor(modelItem => match.Joueur.Prénom)
                    @Html.DisplayFor(modelItem => match.Joueur.Téléphone)
                </div>
            </div>
        }
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.TournoiDTO?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
